@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a style="padding:0px;" asp-area="" asp-action="Index" asp-controller="ShoppingCarts" title="shoppingcart">
          <img width="40" height="40" alt="shoppingcart" src="~/images/shoppingcart3.gif" />
        </a>
           
    </li>
     <li class="nav-item">
            <a style="padding:0px;" asp-area="" asp-action="Index" asp-controller="Orders" title="Orders">
                <img width="30" height="30" alt="Orders" src="~/images/Orders.png" />
            </a>
     </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Home/Index" title="user">Hello, @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a asp-area="" class="nav-link text-dark" asp-action="Logoff" asp-controller="EShopUsers" asp-route-returnUrl="@Url.Action("Logoff", "EShopUsers", new { area = "" })">Logout</a>
    </li>
}
else
{
 
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="EShopUsers" asp-action="LoginUser">Login</a>
    </li>
}
</ul>
