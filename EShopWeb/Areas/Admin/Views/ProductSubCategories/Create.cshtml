@model ProductSubCategoryViewModel

@{
    ViewBag.Title = "Product SubCategory Create";
}

<h5>@ViewData["Title"]</h5>

<div class="row">
    <div class="col-md-7">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCategoryID" class="control-label"></label>
                <select asp-for="ProductCategoryID" class="form-control" asp-items="ViewBag.ProductCategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default btn-info" />
                    @Html.EShopCoreEncryptedActionButtonLink("Back to List", "SubCategoryByCategory", "ProductSubCategories", new { id = ViewBag.ProductCategoryEnID }, new { @class = "btn btn-default btn-info" })
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_AdminValidationScriptsPartial");
    }
}
