@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="" asp-page="/Home/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-area="Admin" asp-controller="EShopUsers" asp-action="Logoff" asp-route-returnUrl="@Url.Action("Logoff", "EShopUsers", new { area = "Admin" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="EShopUsers" asp-action="LoginUser">Login</a>
    </li>
}
</ul>
