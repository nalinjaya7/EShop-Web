@model ProductCategoryViewModel

@{
    ViewBag.Title = "Product Category Edit";
}

<h5>@ViewData["Title"]</h5>
<p>  <div asp-validation-summary="All" class="text-danger"></div></p>
<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="RowVersion" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div> 
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Save" class="btn btn-default btn-info" />
                    @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-default btn-info" })
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_AdminValidationScriptsPartial");
    }
}
 